extends ../layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Action, Horror, etc.' name='name' value=(undefined===category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='This film genre is a...' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg