extends ../layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Movie title.' name='title' value=(undefined===movie ? '' : movie.name))
    div.form-group
      label(for='release_date') Release Date:
      input#release_date.form-control(type='date', placeholder='Movie release date.' name='release_date' value=(undefined===movie ? '' : movie.release_date))
    div.form-group
      label(for='synopsis') Synopsis:
      input#synopsis.form-control(type='text', placeholder='Movie Synopsis.' name='synopsis' value=(undefined===movie ? '' : movie.synopsis))
    div.form-group
      label Categories:
      div
        for category in categories
          div(style="display:inline, padding-right:10px")
          input.checkbox-input(type="checkbox", name="category", id=category._id, value=category._id, checked=category.checked)
          label(for=category._id)  #{category.name}
    div.form-group
      label(for='rate') Rate:
      input#rate.form-control(type='number', placeholder='Movie Rate.' name='rate' value=(undefined===movie ? '' : movie.rate) min=1, max=10)
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Movie price.' name='price' value=(undefined===movie ? '' : movie.price))
    div.form-group
      label(for='num_stock') Stock:
      input#num_stock.form-control(type='number', placeholder='Movie stock.' name='num_stock' value=(undefined===movie ? '' : movie.num_stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg