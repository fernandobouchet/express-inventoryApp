extends layout

block content
  h1= title

  div(class="card-deck")
    each movie in movie_list
      div(class="card")
        a(class="card-body" href=movie.url)
          h5(class="card-title") #{movie.name}
        a(class="card-footer" href=movie.category[0].url)
          small(class="text-muted") #{movie.category[0].name}
    else
      li There are n 